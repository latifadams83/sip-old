<%= provide(:page_title, "Staff Positions")%>
<%= provide(:staff_active, "activelink")%>

<h3>Staff Positions</h3>
<table class="w3-table-all">
  <thead>
    <tr class="w3-theme-d4">
      <th>Position</th>
      <th >Category</th>
      <th >Actions</th>
    </tr>
  </thead>

  <tbody id="staff_position_table">
    <%= render @staff_positions %>
  </tbody>
</table>
<button onclick="$('#newPosition').show();" class="w3-btn w3-tiny  w3-theme-d2 w3-right">+</button>

<%= form_for(@staff_position, method: :post, remote: true) do |f| %>
  <div id="newPosition" class="w3-modal w3-round">
    <div class="w3-modal-content w3-card-8 w3-animate-opacity w3-round" style="max-width:500px">
      <div class="w3-container w3-border-bottom  w3-light-grey w3-round">
        <h5>New Position</h5>
      </div>
      <div class="w3-container">
        <%= f.label :name, class: "w3-label" %>
        <%= f.text_field :name, class: "sp-name w3-input w3-border w3-round" %>
      </div>

      <div class="w3-container">
        <%= f.label :staff_category_id, "Category", class: "w3-label" %>
        <%= f.collection_select :staff_category_id, StaffCategory.order(:name), :id, :name, {include_blank:true}, {class: "sp-cat w3-input w3-round w3-border w3-margin-bottom"} %>
      </div>

      <div class="w3-container w3-border-top w3-padding w3-light-grey">
        <%= f.submit :Create,  class: "w3-btn w3-theme-d4 w3-round w3-right w3-margin-bottom " %>
        <button onclick="$('#newPosition').hide();" type="button" class="w3-btn w3-red">Cancel</button>
      </div>
    </div>
  </div>
<% end %>
