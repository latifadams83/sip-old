    <%= form_for(badge, url: url) do |f| %>
      <%= error_messages_for(f.object)%>

      <div class="w3-row-padding">
          <%= f.label :name, class: "w3-label" %>
          <%= f.text_field :name, placeholder: "E.g. A", class: "w3-input " %>
      </div>

      <div class="w3-row-padding">
        <%= f.label :programme_id, class: "w3-label" %><br>
        <%= f.select(:programme_id, Programme.all.map{|p| [p.name, p.id]}, {:include_blank => true}, { :class => "w3-input w3-validate" }) %>
      </div>

      <div class="w3-row-padding">
        <%= f.label :level_id, class: "w3-label" %><br>
        <%= f.select(:level_id, Level.all.map{|l| [l.name, l.id]}, {:include_blank => true}, { :class => "w3-input w3-validate" }) %>

      </div>

      <div class="w3-row-padding">
        <%= f.label :start_date, class: "w3-label " %><br>
        <%= f.text_field :start_date, class: "w3-input datepicker " %>
      </div>

      <div class="w3-row-padding">
        <%= f.label :end_date, class: "w3-label" %><br>
        <%= f.text_field :end_date, class: "w3-input datepicker" %>
      </div>

      <div class="w3-row-padding">
        <%= f.label :active, class: "w3-label" %>
        <%= f.check_box :active, class: "w3-check w3-margin-bottom" %>
      </div>

      <div class="actions">
        <%= f.submit :Submit, class: "w3-btn w3-round w3-theme-d4 w3-right w3-margin-bottom" %>

    <% end %>
