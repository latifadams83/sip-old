    <%= form_for(badge) do |f| %>
      <% if badge.errors.any? %>
        <div class="w3-row-padding" id="error_explanation">
          <div class="w3-alert">
            <h4><%= pluralize(badge.errors.count, "error") %> prohibited this badge from being saved:</h4>

            <ul>
            <% badge.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        </div>
      <% end %>
      <div class="w3-row-padding">
          <%= f.label :name, class: "w3-label" %>
          <%= f.text_field :name, placeholder: "E.g. A-"+Time.now.year.to_s, class: "w3-input w3-margin-bottom w3-border w3-round w3-validate" %>
      </div>

      <div class="w3-row-padding">
        <%= f.label :programme_id, class: "w3-label" %><br>
        <%= f.select(:programme_id, Programme.all.map{|p| [p.name, p.id]}, {:include_blank => true}, { :class => "w3-select w3-round w3-margin-bottom w3-validate" }) %>
      </div>

      <div class="w3-row-padding">
        <%= f.label :level_id, class: "w3-label" %><br>
        <%= f.select(:level_id, Level.all.map{|l| [l.name, l.id]}, {:include_blank => true}, { :class => "w3-select w3-round w3-margin-bottom w3-validate" }) %>

      </div>

      <div class="w3-row-padding">
        <%= f.label :start_date, class: "w3-label " %><br>
        <%= f.date_select :start_date,{:order=>[:day, :month, :year]}, {class: "w3-select w3-round date-select w3-margin-bottom w3-validate"}  %>
      </div>

      <div class="w3-row-padding">
        <%= f.label :end_date, class: "w3-label" %><br>
        <%= f.date_select :end_date,{:default=>3.years.from_now, :order=>[:day, :month, :year]}, {class: "w3-select w3-round date-select w3-margin-bottom w3-validate"} %>

      </div>

      <div class="w3-row-padding">
        <%= f.label :active, class: "w3-label" %>
        <%= f.check_box :active, class: "w3-check w3-margin-bottom" %>
      </div>

      <div class="actions">
        <%= f.submit :Submit, class: "w3-btn w3-round w3-theme-d4 w3-right w3-margin-bottom" %>

    <% end %>
