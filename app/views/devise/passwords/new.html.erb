<%= provide(:page_title, "Reset Password")%>
<fieldset class="w3-card-8 w3-round">
  <legend><h2>Forgot your Password?</h2></legend>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email, class: "w3-label" %><br />
      <%= f.email_field :email, autofocus: true, class: "w3-input" %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions" , class: "w3-btn w3-theme-d1"%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</fieldset>
