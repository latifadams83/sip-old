<% if @staffs.present?%>
<table class="w3-table-all w3-small">
  <thead>
    <tr class="w3-theme-d1">
      <th><%= sortable("first_name", "Name")%></th>
      <th>Staff ID</th>
      <th><%= sortable("staff_category_id", "Category") %></th>
      <th><%= sortable("staff_department_id", "Department") %></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= link_to staff.full_name, staff %></td>
        <td><%= staff.staff_id %></td>
        <td><%= StaffCategory.find(staff.staff_category_id).name.capitalize %></td>
        <td><%= StaffDepartment.find(staff.staff_department_id).name.upcase %></td>
      </tr>
    <%end%>
  </tbody>
</table>
<%= will_paginate @staffs%>
<%else%>
  <div class="w3-panel w3-amber w3-tiny w3-round w3-card-8">
    <p>
      No staff found
    </p>
  </div>
<%end%>
