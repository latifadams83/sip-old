<p id="notice"><%= notice %></p>

<h4>Staffs</h4>


<table class="w3-table-all">
  <thead>
    <tr class="w3-theme-d4">
      <th>Name</th>
      <th>Staff ID</th>
      <th>Category</th>
      <th>Department</th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= link_to "#{staff.first_name.capitalize} #{staff.last_name.capitalize}", staff %></td>
        <td><%= @results.staff_id %></td>
        <td><%= Category.find(@results.category_id).name.capitalize %></td>
        <td><%= Department.find(@results.department_id).name.upcase %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Staff', new_staff_path %>
