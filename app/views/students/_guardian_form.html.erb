<div class="w3-container" id="new-guardian">
  <div  class="w3-container"  id="nf">
    <%= form_for(guardian, :url => add_guardian_student_path, :method => :post) do |f| %>
      <% if guardian.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(guardian.errors.count, "error") %> prohibited this guardian from being saved:</h2>

          <ul>
          <% guardian.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <fieldset>
        <legend>Basic Info</legend>
        <div class="w3-row-padding">
          <div class="w3-col m12">
            <%= f.label :title, class: "w3-label" %>
            <%= f.text_field :title, class: "w3-input w3-round w3-medium" %>
          </div>
        </div>
        <div class="w3-row-padding">
          <div class="w3-col m6">
            <%= f.label :first_name, class: "w3-label" %>
            <%= f.text_field :first_name, class: "w3-input w3-round w3-medium" %>
          </div>
          <div class="w3-col m6">
            <div><%= f.label :last_name, class: "w3-label" %></div>
            <div><%= f.text_field :last_name, class: "w3-input w3-round w3-medium" %></div>
          </div>
        </div>

        <div class="w3-row-padding">
          <div class="w3-col m6">
            <div><%= f.label :education, class: "w3-label" %></div>
            <%= f.text_field :education, class: "w3-input w3-round w3-medium" %>
          </div>
          <div class="w3-col m6">
            <%= f.label :occupation, class: "w3-label" %>
            <%= f.text_field :occupation, class: "w3-input w3-round w3-medium" %>
          </div>
        </div>
      </fieldset>
      <br>
      <fieldset>
        <legend>Contact Info</legend>
        <div class="w3-row-padding">
          <div class="w3-col m12">
            <%= f.label :address, class: "w3-label" %>
            <%= f.text_field :address, class: "w3-input w3-round w3-medium" %>
          </div>
        </div>

        <div class="w3-row-padding">
          <div class="w3-col m6">
            <%= f.label :city, class: "w3-label" %>
            <%= f.text_field :city, class: "w3-input w3-round w3-medium" %>
          </div>
          <div class="w3-col m6">
            <%= f.label :region, class: "w3-label" %>
            <%= f.text_field :region, class: "w3-input w3-round w3-medium" %>
          </div>
        </div>

        <div class="w3-row-padding">
          <div class="w3-col m6">
            <%= f.label :phone, class: "w3-label" %>
            <div><%= f.text_field :phone, class: "w3-input w3-round w3-medium" %></div>
          </div>
          <div class="w3-col m6">
            <div><%= f.label :email, class: "w3-label" %></div>
            <div><%= f.text_field :email, class: "w3-input w3-round w3-medium" %></div>
          </div>
        </div>
      </fieldset>
      <br>
      <fieldset>
        <div class="w3-row-padding">
          <div class="w3-col m12">
            <%= f.label :relation, class: "w3-label" %>
            <%= f.text_field :relation, class: "w3-input w3-round w3-medium" %>
          </div>
        </div>
      </fieldset>
      <br>
      <fieldset>
        <div class="w3-row-padding">
          <div class="w3-col m12">
            <%= f.label :user_id, class: "w3-label"%>
            <%= f.number_field :user_id, class: "w3-input w3-round w3-medium" %>
          </div>
        </div>
      </fieldset>

      <div class="w3-row-padding">
        <%= f.submit :Finish, class: "w3-btn w3-round w3-theme-d4 w3-left w3-margin-top" %>
    <% end %>
