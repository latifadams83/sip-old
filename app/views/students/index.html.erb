<%= provide(:page_title, "Students")%>
<%= provide(:students_active, "activelink")%>

<fieldset class="w3-input-group w3-round w3-theme-l4 w3-margin-bottom">
  <legend class="w3-container w3-white">Search</legend>
    <%= form_tag(search_students_path, method: "get", remote: true) do %>
    <table class="w3-table w3-small" id="searchTable">
      <tr >
        <td >
          <%= label_tag(:search, "Search:", class: "w3-label")%>
        </td>
        <td >
          <%= select_tag :programme, options_from_collection_for_select(@programmes, "id", "name"), class: "w3-input", prompt: "Programme"%>
        </td>
        <td >
          <%= select_tag :level, options_from_collection_for_select(@levels, "id", "name"), class: "w3-input", prompt: "Level"%>
        </td>
        <td >
          <%= select_tag :badge, options_from_collection_for_select(@badges, "id", "name"), class: "w3-input", prompt: "Class"%>
        </td>
        <td >
          Current<%= radio_button_tag 'status', 'current', true%>&nbsp;
          Past<%= radio_button_tag 'status', 'past'%>
        </td>

        <td>
          <%= submit_tag("Search", class: "w3-btn w3-theme-d1 w3-tiny", id: "sc1") %>
        </td>
      </tr>
    </table>
    <% end %>
</fieldset>
<div class="w3-panel" id="SearchResults">

</div>
