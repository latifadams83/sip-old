<%= provide(:page_title, "Programmes".html_safe)%>
<%= provide(:page_icon, "#{content_tag(:i, '', :class => ("fa fa-list"))} ".html_safe)%>
<%= provide(:settings_active, "activelink")%>
<% content_for :page_actions do %>
   <div class="w3-tiny w3-right w3-margin-right">
    <button class="w3-bar-item w3-button w3-teal" onclick="$('#newProgramme').show();">Add</button>
  </div> <% end %>

  <table class="w3-table-all">
  <thead class=" w3-round">
    <tr class="w3-light-gray">
      <th>Programme</th>
      <th>Students</th>
      <th class="w3-center"> Actions</th>
    </tr>
  </thead>

  <tbody id="programmes_tbody">
    <%= render @programmes %>
  </tbody>
  </table>

 <%= form_for(@programme, url: admin_programmes_path, method: :post, remote: true) do |f| %>
   <div id="newProgramme" class="w3-modal w3-round">
     <div class="w3-modal-content w3-card-8 w3-animate-opacity w3-round" style="max-width:600px">
       <div class="w3-container w3-border-bottom  w3-light-grey w3-round">
         <h4 class="w3-left"><i class="fa fa-plus"></i> Programme</h4>
       </div>
         <div class="w3-container">
           <%= f.label :name, class: "w3-label" %>
           <%= f.text_field :name, class: "p_name w3-input w3-border w3-round", required: true%>
         </div>
         <div class="w3-container w3-margin-bottom">
           <%= f.label :code, class: "w3-label" %>
           <%= f.text_field :code, class: "p_code w3-input w3-border w3-round" %>
           <%= f.hidden_field :user_id, :value => current_user.id %>
         </div>

       <div class="w3-container w3-border-top w3-padding w3-light-grey">
         <%= f.submit :Submit,  class: "w3-btn w3-theme-d4 w3-round w3-left w3-tiny w3-margin-bottom " %>
         <button onclick="$('#newProgramme').hide();" type="button" class="w3-btn w3-red w3-tiny w3-right w3-round">Cancel</button>
       </div>
     </div>
   </div>
 <% end %>

</div>
