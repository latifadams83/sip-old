<%= provide(:page_title, "guardian")%>
<%= provide(:students_active, "activelink")%>

<div class="w3-container">
  <div class="w3-row-padding">
    <div class="w3-col s2 profile-img">
    </div>

      <!-- Tabs -->
    <div class="w3-col s10 page-nav">
      <ul class="w3-navbar w3-card-2 w3-light-grey w3-tiny">
        <li><%= link_to "< Back", admin_guardians_path , class: "w3-theme-d1 w3-margin-right"%></li>
       <li class="w3-dropdown-hover w3-hide-small"><%= link_to "Profile", admin_guardian_path(@guardian), class: "w3-theme-d1 w3-margin-right"%>
         <div class="w3-dropdown-content w3-card-4 w3-theme-d1">
           <%= link_to 'Edit', edit_admin_guardian_path(@guardian)%>
         </div>
       </li>
      </ul>
    </div>
  </div>

  <!--Content -->
  <div class="w3-row-padding">
    <div class="w3-content w3-col s12 w3-margin-top  page-content">
        <table class="w3-table w3-table-striped w3-bordered ">
          <tr class="w3-theme-l4" >
            <td colspan="4">Personal Information</td>
          </tr>
          <tr >
            <td class="w3-right"><strong>Title:</strong></td>
            <td colspan="3"><%= @guardian.title%></td>
          </tr>

          <tr>
            <td class="w3-right" ><strong>First name:</strong></td>
            <td><%= @guardian.first_name %></td>
            <td class="w3-right" ><strong>Last name:</strong></td>
            <td><%= @guardian.last_name %></td>
          </tr>
          <tr>
            <td class="w3-right" ><strong>Education:</strong></td>
            <td><%= @guardian.education %></td>
            <td class="w3-right" ><strong>Occupation:</strong></td>
            <td><%= @guardian.occupation %></td>
          </tr>

          <tr class="w3-theme-l4" >
            <td colspan="4">Contact Information</td>
          </tr>
          <tr>
            <td class="w3-right" ><strong>Address:</strong></td>
            <td colspan="3"><%= @guardian.address %></td>
          </tr>
          <tr>
            <td class="w3-right" ><strong>Region:</strong></td>
            <td><%= @guardian.region %></td>
            <td class="w3-right" ><strong>Town/City:</strong></td>
            <td><%= @guardian.city %></td>
          </tr>
          <tr>
            <td class="w3-right" ><strong>Phone/Mobile:</strong></td>
            <td><%= @guardian.phone %></td>
            <td class="w3-right" ><strong>Email:</strong></td>
            <td><%= @guardian.email %></td>
          </tr>
          <tr class="w3-theme-l4" >
            <td colspan="4">Ward(s)</td>
          </tr
          <tr >
            <td class="w3-right"><strong>Ward(s):</strong></td>
            <td colspan="3">
              <% if @guardian.students.present? %>
                <% @guardian.students.each do |student| %>
                  <%= link_to "#{student.last_name } "+"#{student.first_name}  ", admin_student_path(student)%>
                <% end %>
              <% else%>
                <%= link_to "Add Student", new_admin_student_path%>
              <% end %>

            </td>
          </tr>

        </table>
    </div>
  </div>
</div>
