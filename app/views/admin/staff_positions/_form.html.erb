<%= form_for(staff_position, url: url) do |f| %>
  <%= error_messages_for(f.object)%>
  <div class="w3-row">
    <div class="w3-col s12">
    <%= f.label :name, class: "w3-label" %>
    <%= f.text_field :name, class: "w3-input w3-border w3-round" %>
    </div>
  </div>
  <br>
  <div class="w3-row">
    <div class="w3-col s12">
      <%= f.label :staff_category_id, "Category", class: "w3-label" %>
      <%= f.collection_select :staff_category_id, StaffCategory.order(:name), :id, :name, {include_blank:true}, {class: "w3-input w3-round w3-border w3-margin-bottom"} %>
    </div>
  </div>
  <br>
  <div class="w3-row">
    <div class="w3-col s12">
    <%= f.submit "Save", class: "w3-btn w3-right w3-round  w3-theme-d4" %>
<% end %>
