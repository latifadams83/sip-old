
<h4>User Roles</h4>

<table class="w3-table-all">
  <thead>
    <tr class="w3-theme-d1">
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.name %></td>
        <td><%= link_to 'Delete', admin_role_path(role), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '+ Role', new_admin_role_path, class: "w3-btn w3-theme-d1 w3-tiny" %>
