<tr id="grade_level_<%= grade_level.id%>">
  <td><%= grade_level.name %></td>
  <td>
    <%= link_to grade_level.students.count, admin_students_path(), class: "w3-badge w3-green" %>
  </td>
  <td class="w3-center">
      <a href="javascript:void();" onclick="$('#updateLevel_<%= grade_level.id%>').show();"><i class="fa fa-pencil"></i></a>
      &nbsp;&nbsp;
      <%= link_to "#{content_tag(:i, '', :class => ("fa fa-trash"))}".html_safe, admin_grade_level_path(grade_level), method: :delete, data: { confirm: 'Are you sure?' } %>

    <!-- Modal form for Updating School grade levels -->
  <div id="updateLevel_<%= grade_level.id%>" class="w3-modal w3-round">
    <%= form_for(grade_level, url: admin_grade_level_path(grade_level), remote:true) do |f| %>
    <%= error_messages_for(f.object)%>
        <div class="w3-modal-content w3-card-8 w3-animate-opacity w3-round" style="width:600px">
          <div class="w3-container w3-border-bottom  w3-light-grey w3-round">
            <h4 class="w3-left"><i class="fa fa-pencil"></i> Grade Level</h4>
          </div>

          <div class="w3-container">
            <div class="w3-row w3-margin">
              <div class="w3-col s12">
                <%= f.label :name, class: "w3-label w3-left w3-label" %>
                <%= f.text_field :name, {class: "w3-input w3-card w3-round"} %>
              </div>
            </div>
            <div class="w3-row w3-margin">
              <div class="w3-col s12">
                <%= f.label "Level", class: "w3-label w3-left w3-label" %>
                <%= f.select :level, 1..10, {include_blank:true,}, {class: "w3-select w3-card w3-round"} %>
              </div>
            </div>
          </div>

          <div class="w3-container w3-border-top w3-padding w3-light-grey">
            <%= f.submit :Update,  class: "w3-btn w3-theme-d4 w3-round w3-left w3-margin-bottom w3-tiny " %>
            <button onclick="$('#updateLevel_<%= grade_level.id%>').fadeOut();" type="button" class="w3-btn w3-red w3-right w3-tiny w3-round">Cancel</button>
          </div>

        </div>

    <% end %>
  </div>
  </td>
</tr>
