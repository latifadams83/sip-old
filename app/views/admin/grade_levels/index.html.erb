<%= provide(:page_title, "Programmes")%>
<%= provide(:page_icon, "#{content_tag(:i, '', :class => ("fa fa-list"))} ".html_safe)%>
<%= provide(:settings_active, "activelink")%>

 <div class=" w3-margin-top">
  <span class="w3-bar-item w3-left w3-margin-left"><a class="fa fa-th-list"><i> Grade Levels</i></a></span>

   <button onclick="$('#newLevel').show();" class="w3-btn w3-tiny w3-green w3-bar-item w3-right w3-round">
     Add
   </button>
</div> <br>

<div class="w3-white w3-panel w3-round w3-padding-16 w3-topbar">
  <table class="w3-table-all">
  <thead>
    <tr class="w3-light-gray">
      <th>Name</th>
      <th>Students</th>
      <th class="w3-center"> Actions</th>
    </tr>
  </thead>

  <tbody id="grade_level_tbody">
    <%= render @grade_levels %>
  </tbody>
  </table>
</div>

<!-- Modal form for creating School grade levels -->
<%= form_for(@grade_level, url: admin_grade_levels_path, remote:true) do |f| %>
<%= error_messages_for(f.object)%>
  <div id="newLevel" class="w3-modal w3-round">
    <div class="w3-modal-content w3-card-8 w3-animate-opacity w3-round" style="width:600px">
      <div class="w3-container w3-border-bottom  w3-light-grey w3-round">
        <h4 class="w3-left"><i class="fa fa-plus"></i> Grade Level</h4>
      </div>
      <div class="w3-container">
        <div class="w3-row w3-margin">
          <div class="w3-col s12">
            <%= f.label :name, class: "w3-label" %>
            <%= f.text_field :name, {class: "w3-input w3-card w3-round", id: "name", id: "l-name"} %>
          </div>
        </div>
        <div class="w3-row w3-margin">
          <div class="w3-col s12">
            <%= f.label "Level", class: "w3-label" %>
            <%= f.select :level, 1..10, {include_blank:true,}, {class: "w3-select w3-card w3-round"} %>
          </div>
        </div>
      </div>

      <div class="w3-container w3-border-top w3-padding w3-light-grey">
        <%= f.submit :Update,  class: "w3-btn w3-theme-d4 w3-round w3-left w3-margin-bottom w3-tiny " %>
        <button onclick="$('#newLevel').fadeOut();" type="button" class="w3-btn w3-red w3-right w3-tiny w3-round">Cancel</button>
      </div>
    </div>
  </div>

<% end %>
