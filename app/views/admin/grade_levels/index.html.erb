<%= provide(:page_title, "Levels")%>
<%= provide(:settings_active, "activelink")%>

<table class="w3-table-all w3-small">
  <thead>
    <tr class="w3-theme-d4">
      <th>Level</th>
      <th>Name</th>
      <th class="w3-center"> Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @levels.each do |level| %>
      <tr>
        <td><%= level.level %></td>
        <td><%= level.name %></td>
        <td class="w3-center">
          <span><%= link_to "#{content_tag(:i, '', :class => ("fa fa-pencil"))}".html_safe, edit_admin_grade_level_path(level)%>&nbsp;&nbsp;
          <%= link_to "#{content_tag(:i, '', :class => ("fa fa-trash"))}".html_safe, admin_grade_level_path(level), method: :delete, data: { confirm: 'Are you sure?' } %></span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "#{content_tag(:i, '', :class => ("fa fa-plus"))}".html_safe, new_admin_grade_level_path, class: "w3-right"%>
