<%= provide(:page_title, "New Level")%>
<%= provide(:settings_active, "activelink")%>

<fieldset class="w3-panel w3-round-large w3-card-2 w3-light-gray w3-small">
  <legend class="w3-container w3-padding">
    <a href="javascript:void();" onclick="$('#newLevel').toggle(300);">New Badge <i class="fa fa-caret-down"></i></a>
  </legend>
  <div id="newLevel">
    <%= render 'form', level: @level, url: admin_grade_levels_path %>
    <%= link_to 'Cancel', admin_grade_levels_path, class: "w3-btn w3 w3-round w3-left w3-margin-bottom" %>
  </div>
</div>
</fieldset>
