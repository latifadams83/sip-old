<%= form_for(student,url: url) do |f| %>
  <%= error_messages_for(f.object)%>

  <fieldset class="w3-panel w3-round-large w3-card w3-light-gray w3-tiny">
    <legend class="w3-container w3-padding">
      <a href="javascript:void();" onclick="$('#personalDetails').toggle(300);"><b>Personal Details</b> <i class="fa fa-caret-down"></i></a>
    </legend>
    <div id="personalDetails">
      <div class="w3-row-padding">
        <div class="w3-col s6  w3-padding">
          <%= f.label :placed_id, "Placed ID:", class: "w3-label w3-validate" %>
          <%= f.text_field :placed_id, class: "w3-input", :required=>true%>
        </div>

        <div class="w3-col s6  w3-padding">
          <div><%= f.label :placed_date, "Placed Date:", class: "w3-label " %></div>
          <div><%= f.text_field :placed_date, class: "w3-input datepicker", :required=>true%></div>
        </div>
      </div>
      <div class="w3-row ">
        <div class="w3-col s6  w3-padding">
          <%= f.label :first_name, "First Name:", class: "w3-label" %>
          <%= f.text_field :first_name, class: "w3-input", :required=>true%>
        </div>
        <div class="w3-col s6  w3-padding">
          <%= f.label :last_name, class: "w3-label" %>
          <%= f.text_field :last_name, class: "w3-input", :required=>true%>
        </div>
      </div>
      <div class="w3-row">
        <div class="w3-col s6  w3-padding">
          <%= f.label :gender, class: "w3-label" %>
          <%= f.select(:gender, {Male: :M, Female: :F}, {:include_blank => true}, { :class => "w3-input", :required=>true }) %>
        </div>
        <div class="w3-col s6  w3-padding">
          <%= f.label :date_of_birth, class: "w3-label" %>
          <%= f.text_field :date_of_birth, class: "w3-input datepicker " %>
        </div>
      </div>
      <div class="w3-row">
        <div class="w3-col s6  w3-padding">
          <%= f.label :religion, class: "w3-label" %>
          <%= f.select(:religion, {Islam: :Islam, Christianity: :Christianity, Traditonal: :Traditional, Other: :Other}, {:include_blank => true}, { :class => "w3-input" }) %>
        </div>
      </div>
    </div>
  </fieldset>

  <fieldset class="w3-panel w3-round-large w3-card w3-light-gray w3-tiny">
    <legend class="w3-container w3-padding">
      <a href="javascript:void();" onclick="$('#enrolmentDetails').toggle(300);"><b>Enrolment Details</b> <i class="fa fa-caret-down"></i></a>
    </legend>
    <div id="enrolmentDetails">
      <div class="w3-row">
        <div class="w3-col s6  w3-padding">
          <%= f.label :programme_id, class: "w3-label" %>
          <%= f.select(:programme_id, Programme.all.map{|p| [p.name, p.id]}, {:include_blank => true}, { :class => "w3-input", :required=>true }) %>
        </div>
        <div class="w3-col s6  w3-padding">
          <%= f.label :grade_level_id, "Grade Level", class: "w3-label" %>
          <%= f.select(:grade_level_id, GradeLevel.all.map{|l| [l.name, l.id]}, {:include_blank => true}, { :class => "w3-input", :required=>true }) %>
        </div>
      </div>
      <div class="w3-row">
        <div class="w3-col s6  w3-padding">
          <%= f.label :badge_id, :Class, class: "w3-label" %>
          <%= f.select(:badge_id, Badge.all.map{|b| [b.full_name, b.id]}, {:include_blank => true}, { :class => "w3-input", required: true }) %>
        </div>
        <div class="w3-col s6  w3-padding">
          <%= f.label :house_id, "House of Affiliation", class: "w3-label" %>
          <%= f.select(:house_id, House.all.map{|h| [h.name, h.id]}, {:include_blank => true}, { :class => "w3-input"}) %>
        </div>
      </div>
    </div>
  </fieldset>

  <fieldset class="w3-panel w3-round-large w3-card w3-light-gray w3-tiny">
    <legend class="w3-container w3-padding">
      <a href="javascript:void();" onclick="$('#contactDetails').toggle(300);"><b>Contact Details</b> <i class="fa fa-caret-down"></i></a>
    </legend>
    <div id="contactDetails">
      <div class="w3-row">
        <div class="w3-col s12  w3-padding">
          <%= f.label :address, class: "w3-label" %>
          <%= f.text_field :address, class: "w3-input" %>
        </div>
      </div>
      <div class="w3-row">
        <div class="w3-col s6  w3-padding">
          <%= f.label :city, class: "w3-label" %>
          <%= f.text_field :city, class: "w3-input" %>
        </div>
        <div class="w3-col s6  w3-padding">
          <%= f.label :region, class: "w3-label" %>
          <%= f.select(:region, {"Upper West"=>"Upper West", "Upper East"=>"Upper East", "Northern"=>"Northern", "Brong Ahafo"=>"Brong Ahafo", "Asante"=>"Asante", "Eastern"=>"Eastern", "Central"=>"Central", "Western"=>"Western", "Volta"=>"Volta", "Greater Accra"=>"Greater Accra", "Other"=>"Other"}, {:include_blank => true}, { :class => "w3-input" }) %>
        </div>
      </div>
      <div class="w3-row">
        <div class="w3-col s6  w3-padding">
          <%= f.label :phone, class: "w3-label" %>
          <%= f.phone_field :phone, class: "w3-input" %>
        </div>
        <div class="w3-col s6  w3-padding">
          <%= f.label :email, class: "w3-label" %>
          <%= f.email_field :email, class: "w3-input" %>
        </div>
      </div>
      <div class="w3-row">
        <div class="w3-col s12  w3-padding">
          <%= f.label :image, "Headshot", class: "w3-label"%>
          <%= f.file_field :image%>
        </div>
      </div>
    </div>

    <div class="w3-row-padding">
      <div class="w3-col s12  w3-padding">
        <%= f.submit  "Save", class: "w3-btn w3-round w3-theme-d4 w3-right w3-margin-top" %>
  <% end %>
