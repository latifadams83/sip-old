<!DOCTYPE html>
<html >
  <head>
    <title>SIP | <%= yield(:page_title)%></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <body class="w3-content w3-light-gray" style="max-width:980px">
      <div class="w3-container w3-top w3-theme-d2 w3-large w3-padding" style="max-width: 980px;">
        <button class="w3-btn w3-hide-large w3-padding-0 w3-hover-text-grey" onclick="open_sidenav();"><i class="fa fa-bars"></i></button>
        <span class="w3-left">
        <%= link_to image_tag("logo.png", size: "30", class: "w3-circle"), root_path %></span>
        <%= link_to "#{content_tag(:i, '', :class => ("w3-right fa fa-sign-out"))}".html_safe, destroy_user_session_path, :method => :delete%>
      </div>

      <!-- Sidenav/menu -->
      <nav class="w3-sidenav w3-collapse w3-white w3-small"  id="pageSidenav">
        <div class=" w3-row">
          <div class="w3-col s12">
            <span>Welcome, <strong><%= current_user.email.capitalize%></strong></span><br><br>
          </div>
        </div>
        <%= render "layouts/admin_menu"%>
      </nav>

      <!-- Overlay effect when opening sidenav on small screens -->
      <div class="w3-overlay w3-hide-large w3-animate-opacity" onclick="close_sidenav()" style="cursor:pointer" title="close side menu" id="myOverlay"></div>

      <!-- !PAGE CONTENT! -->
      <div class="w3-main w3-white w3-round-large" >

        <div class="w3-panel w3-margin-bottom  w3-round">
          <div class="w3-panel" >
            <%= notice_messages(notice) %>
            <%= alert_messages(alert) %>
          </div>
          <div class="w3-panel">
            <h5 class="w3-bottombar"><b><%= yield(:page_title)%></b></h5>
          </div>
            <div class="w3-panel">
                <%= yield %>
            </div>
        </div>

      </div>
      <!-- Footer -->
      <footer class="w3-panel w3-white w3-round-large  w3-padding-8 " style="margin-left: 240px;">
        <p>Powered by Latif</p>
      </footer>
        <!-- End page content -->
</body>
<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</html>
