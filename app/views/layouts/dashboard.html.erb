<!DOCTYPE html>
<html >
  <head>
    <title>SIP | <%= yield(:page_title)%></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
<body class="w3-gray">

  <!-- Navbar -->
  <%= user_menu(current_user)%>

  <!-- Page Messages -->
  <%= notice_messages(notice) %>
  <%= alert_messages(alert) %>

  <!-- Content -->
  <div class="w3-row-padding" id="page-container">
      <div class="w3-content" id="page-content">

        <%= yield %>

      </div>
  </div>

  <!-- Footer -->
  <footer class="w3-container w3-padding-64 w3-opacity center-position">
   <p>&copy <%= Time.now.year()%></p>
  </footer>

</body>
<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</html>
