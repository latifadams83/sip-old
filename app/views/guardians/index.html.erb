<p id="notice"><%= notice %></p>

<h1>Guardians</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Occupation</th>
      <th>Relation</th>
      <th>Address</th>
      <th>City</th>
      <th>Region</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Education</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guardians.each do |guardian| %>
      <tr>
        <td><%= guardian.title %></td>
        <td><%= guardian.first_name %></td>
        <td><%= guardian.last_name %></td>
        <td><%= guardian.occupation %></td>
        <td><%= guardian.relation %></td>
        <td><%= guardian.address %></td>
        <td><%= guardian.city %></td>
        <td><%= guardian.region %></td>
        <td><%= guardian.phone %></td>
        <td><%= guardian.email %></td>
        <td><%= guardian.education %></td>
        <td><%= guardian.user_id %></td>
        <td><%= link_to 'Show', guardian %></td>
        <td><%= link_to 'Edit', edit_guardian_path(guardian) %></td>
        <td><%= link_to 'Destroy', guardian, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

