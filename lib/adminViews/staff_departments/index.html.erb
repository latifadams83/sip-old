<%= provide(:page_title, "Staff Departments")%>
<%= provide(:staff_active, "activelink")%>


<table class="w3-table-all">
  <thead>
    <tr class="w3-theme-d4">
      <th>Department</th>
      <th>Category</th>
      <th class="w3-center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @staff_departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><%= StaffCategory.find(department.staff_category_id).name %></td>
        <td class="w3-center">
          <%= link_to 'Edit', edit_admin_staff_department_path(department), class: "w3-btn w3-tiny w3-amber" %>
          <%= link_to 'Delete', admin_staff_department_path(department), method: :delete, data: { confirm: 'Are you sure?' },class: "w3-btn w3-red w3-tiny" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '+ Staff Department', new_admin_staff_department_path, class: "w3-btn w3-tiny w3-theme-d4 w3-right w3-round" %>
