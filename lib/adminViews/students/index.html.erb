<%= provide(:page_title, "Edit Staff Position")%>
<%= provide(:students_active, "activelink")%>

<table class="w3-table-all">
  <thead>
    <tr class="w3-theme-d1">
      <th>Placed ID</th>
      <th>Name</th>
      <th>Gender</th>
      <th>Programme</th>
      <th>Level</th>
      <th >Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.placed_id %></td>
        <td><%= student.last_name+ " "+student.first_name %></td>
        <td><%= student.gender %></td>
        <td><%= student.programme_id %></td>
        <td><%= Badge.find(student.badge_id).name %></td>
        <td>
         <%= link_to 'Show', admin_student_path(student), class: "w3-btn w3-round w3-tiny w3-theme-d4" %>
         <%= link_to 'Edit', edit_admin_student_path(student), class: "w3-btn w3-round w3-tiny w3-amber" %>
         <%= link_to 'Delete', admin_student_path(student), method: :delete, data: { confirm: 'Are you sure?' }, class: "w3-btn w3-round w3-tiny w3-red" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '+', new_admin_student_path, class: "w3-btn w3-theme-d4 w3-right w3-tiny" %>
