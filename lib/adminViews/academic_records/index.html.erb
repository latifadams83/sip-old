<p id="notice"><%= notice %></p>

<h1>Academic Records</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Cert earned</th>
      <th>Institution</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @academic_records.each do |academic_record| %>
      <tr>
        <td><%= academic_record.type %></td>
        <td><%= academic_record.cert_earned %></td>
        <td><%= academic_record.institution %></td>
        <td><%= academic_record.duration %></td>
        <td><%= link_to 'Show', academic_record %></td>
        <td><%= link_to 'Edit', edit_academic_record_path(academic_record) %></td>
        <td><%= link_to 'Destroy', academic_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

